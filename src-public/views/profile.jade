doctype html
html
    head
        script(src="profile.coffee")
        style.
            #updateButton, #resetButton {
                margin-bottom: 90px;
            }

            textarea {
                resize: none;
            }
    body
        .container
            h2(align='center')
                label#title Hello
            .row
                .col-md-12.center-block
                    label
                        big Avatar:
            .row
                .col-md-12
                    img(id='avatarimg', align='center', alt='Avatar', height='200', width='200', src='http://jeanbaptiste.bayle.free.fr/AVATAR/grey_default_avatar1234375017_opensalon.jpg')
                .col-md-12
                    .btn-group-lg-pic
                        label.btn.btn-primary.ng-pristine.ng-untouched.ng-valid(onclick='changeSize(200)') Small
                        label.btn.btn-primary.ng-pristine.ng-untouched.ng-valid(onclick='changeSize(250)') Medium
                        label.btn.btn-primary.ng-pristine.ng-untouched.ng-valid(onclick='changeSize(300)') Large
            .row
            form(role='form')
                .form-group
                    label(for='img')
                        input#imgFile.btn.btn-default.btn-info.btn-sm(type='file' accept='image/*' onchange="uploadImage()")
                .row
                form(role='form')
                    .form-group
                        label(for='usr')
                            big Name:
                        input#name.form-control(type='text')
                    .form-group
                        label(for='usr')
                            big Email:
                        label#email.form-control(type='text') kwest@gary.edu
                    .form-group
                        label
                            big University:
                        label#uni.form-control(type='text') University of California, San Diego
                    .form-group
                        label
                            big Major:
                        input#maj.form-control(type='text')
                    .form-group
                        label
                            big About Me:&#160
                        label
                            small 240 max characters
                        textarea#about.form-control(rows="4" maxlength='240')
                button.btn.btn-primary.btn-lg#updateButton(onclick='updateAccInfo()') Update
                button.btn.btn-primary.btn-lg.pull-right#resetButton(onclick='resetInfo()') Reset