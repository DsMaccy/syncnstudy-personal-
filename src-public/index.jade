doctype html
html(lang="en", ng-app="angularParseBoilerplate")
    head
        title SyncNStudy
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="css/app.css")
        script(src="js/vendor.js")
        script(src="js/templates.js")
        script(src="js/app.js")
    body
      .navbar(ng-controller='NavbarCtrl')
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-responsive-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(ui-sref='home') SyncNStudy
        .navbar-collapse.collapse.navbar-responsive-collapse
          ul.nav.navbar-nav(ng-if='isAuthenticated()')
            li.active
              a(ui-sref='classes') Classes
            li.dropdown
              a.dropdown-toggle(ui-sref='invites', data-target='#', data-toggle='dropdown')
                | Invites 
                b.caret
              ul.dropdown-menu
                li
                  a(ui-sref='invites') Invite Notifications
                li
                  a(ui-sref='new_study_invite') Send Study Invite
                li
                  a(ui-sref='new_requirement') Send Class Event
          ul.nav.navbar-nav.navbar-right(ng-if='isAuthenticated()')
            li
              a(ui-sref='profile') Profile
            li
              a(ui-sref='logout') Logout
          ul.nav.navbar-nav.navbar-right(ng-if='!isAuthenticated()')
            li
              a(ui-sref='login') Login
            li
              a(ui-sref='signup') Signup
